             <user-service>
            <user name="admin" password="admin" authorities="admin"/>
            <user name="user" password="user" authorities="user"/>
            <user name="patient" password="patient" authorities="patient"/>
        </user-service>
        </authentication-provider>    
            
    </authentication-manager>
    
 
    
